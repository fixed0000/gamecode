global all_points
all_points = 20

def charisma_function():
    print ("you have 20 points. set you charisma level from 0 to 20")
    global charisma_int
    charisma_int = input() 
    if isinstance(charisma_int,int):
        global charisma_
        charisma_ = str(charisma_int)
        if charisma_int >-1 and charisma_int <21:
         global points_int
         points_int = all_points - charisma_int
         global points 
         points = str(points_int)
        else:
         clear_console()
         print ("incorrect amount of points. set again")
         charisma_function()
    else:
        clear_console()
        print ("you have " + charisma_ + " points in charisma")
        charisma_function()

