def class_function():
    print ("choose your class (mage,warrior)")
    global class_
    class_ = input()
    if class_ == "warrior" or class_ == "mage":
             print ("you have chosen " + class_ + " class")
    else:
        clear_console()
        print ("choose again")
        class_function()

class_function()

